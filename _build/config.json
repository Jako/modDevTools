{
  "name": "modDevTools",
  "lowCaseName": "moddevtools",
  "description": "Rapid site development helper for MODx Revolution",
  "author": "Vitaly Kireev, Thomas Jakobi",
  "version": "1.3.7",
  "package": {
    "menus": [
      {
        "text": "moddevtools.menu",
        "description": "moddevtools.menu_desc",
        "action": "home",
        "permissions": "view_chunk,view_template"
      }
    ],
    "elements": {
      "plugins": [
        {
          "name": "modDevTools",
          "description": "Rapid site development helper for MODx Revolution",
          "file": "moddevtools.plugin.php",
          "events": [
            "OnChunkFormPrerender",
            "OnChunkFormSave",
            "OnDocFormPrerender",
            "OnDocFormSave",
            "OnSnipFormPrerender",
            "OnSnipFormSave",
            "OnTempFormPrerender",
            "OnTempFormSave",
            "OnTVFormPrerender",
            "OnTVFormSave"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "show_breadcrumb_context",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "breadcrumb_limit",
        "area": "system",
        "value": "3"
      }
    ]
  },
  "database": {
    "tables": [
      "modDevToolsLink"
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.regenerate_tables.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
